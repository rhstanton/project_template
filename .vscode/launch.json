{
    // VS Code Debug Configurations for reproducible research
    //
    // Start debugging:
    //   - F5 (start debugging with selected configuration)
    //   - F9 (toggle breakpoint)
    //   - Ctrl+Shift+D (open Debug panel)
    //
    // All configurations include proper environment variables for Julia bridge
    //
    // See docs/vscode_integration.md for complete guide
    //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "JULIA_CONDAPKG_BACKEND": "Null",
                "JULIA_PYTHONCALL_EXE": "${workspaceFolder}/.env/bin/python",
                "JULIA_PROJECT": "${workspaceFolder}/env",
                "JULIA_DEPOT_PATH": "${workspaceFolder}/.julia"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Debug price_base analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_analysis.py",
            "args": [
                "price_base"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "JULIA_CONDAPKG_BACKEND": "Null",
                "JULIA_PYTHONCALL_EXE": "${workspaceFolder}/.env/bin/python",
                "JULIA_PROJECT": "${workspaceFolder}/env",
                "JULIA_DEPOT_PATH": "${workspaceFolder}/.julia"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Debug remodel_base analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_analysis.py",
            "args": [
                "remodel_base"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "JULIA_CONDAPKG_BACKEND": "Null",
                "JULIA_PYTHONCALL_EXE": "${workspaceFolder}/.env/bin/python",
                "JULIA_PROJECT": "${workspaceFolder}/env",
                "JULIA_DEPOT_PATH": "${workspaceFolder}/.julia"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Run Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v",
                "--cov=.",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}
